<% if user_signed_in? && opinion.liked_by?(current_user)%>
  <%= link_to "いいね済", opinion_like_path(opinion.id, opinion.likes.find_by(user_id: current_user.id)), data: { turbo_method: :delete }, class: "opinion_likes", id: "like-btn", remote: true %>
<% else %>
  <%= link_to "いいねする", opinion_likes_path(opinion.id), data: { turbo_method: :post }, class: "opinion_likes", id: "like-btn", remote: true %>
<% end %>