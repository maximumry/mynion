<%= render partial: "header" %>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
  <div class="card" style="min-width: 40vw;">
    <div class="card-body">
      <h2 class="text-center">新規投稿</h2>
        <%= form_with(model: @opinion, data: { turbo: false }, local: true) do |f| %>
        <%= render "shared/error_messages", model: f.object %>
        <div class="mb-3 text-center">
          <%= f.label :image, class: "btn btn-secondary btn-sm" do %>
             画像を選択
            <%= f.file_field :image, style: "display: none;" %>
          <% end %>
        </div>
        <div class="mb-3 text-center">
          <%= f.text_area :title, placeholder:"タイトルを入力", class: "w-75" %>
        </div>
        <div class="mb-3 text-center">
          <%= f.text_area :text, placeholder:"本文を入力", class: "w-75" %>
        </div>
        <div class="text-center">
          <%= f.submit "送信", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>